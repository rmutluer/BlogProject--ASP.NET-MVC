@model NewPasswordViewModel
@{
    Layout = null;
    ViewBag.Title = "Şifre Yenile";
  

}


<!DOCTYPE html>
<html>
<head>
    <title>Yeni Şifre</title>
    <link href="~/mainBlog/img/icons8-falcon-50.png" rel="icon" />
    <link href="~/css/Login.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>



</head>
<body>
    <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">
        <div class="signup">
            <form asp-action="NewPassword" method="post">
                <input type="hidden" name="Token" value="@Model.Token" />
                <input type="hidden" name="Email" value="@Model.Email" />
                <div style="display:flex;flex-direction: row;flex-wrap: wrap;justify-content:right;align-items: flex-end;">
                    <input type="email" asp-for="Email" value="@Model.Email" readonly style="background-color:darkgray; margin-top:30%; margin-right:auto;" />
                </div>
                <div style="display:flex;flex-direction: row;flex-wrap: wrap;justify-content:right;align-items: flex-end;">
                    <input type="password" asp-for="Password" id="password" placeholder="Şifre" style="margin-left:2%" />
                    <i class="eye fa-solid fa-eye-slash d-flex justify-content-end" id="passkey" onclick="pass()" style="margin-bottom:37px; margin-right:20px; margin-left: 20px;"></i>

                </div>
                <div style="display:flex;flex-direction: row;flex-wrap: wrap;justify-content:right;align-items: flex-end;">
                    <input type="password" asp-for="SecondPassword" id="password2" placeholder="Şifre(Tekrar)" style="margin-left:2%" />
                    <i class="eye fa-solid fa-eye-slash d-flex justify-content-end" id="passkey2" onclick="pass2()" style="margin-bottom:37px; margin-right:20px; margin-left: 20px;"></i>

                </div>

                <button class="button login__submit">
                    <span class="button__text">KAYDET</span>
                    <i class="button__icon fas fa-chevron-right"></i>

                </button>
            </form>
        </div>


    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/PasswordEye.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip({
                html: true,
                placement: "bottom"
            });
        });
    </script>
    @{
        var message = TempData["Message"];
        if (message != null)
        {
            <script>
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.success("@message")
            </script>
        }
    }
    @{
        var message2 = TempData["Message2"];
        if (message2 != null)
        {
            <script>
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.error("@message2")
            </script>
        }
    }
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
