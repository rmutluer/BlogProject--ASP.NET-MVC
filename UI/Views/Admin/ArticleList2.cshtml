@model IEnumerable<ENTITIES.Entities.Article>

@{
    ViewData["Title"] = "Makaleler";
    Layout = "_AdminLayout";
}

<div class="d-flex ">
   
    <a class="btn btn-outline-dark ml-auto align-self-center mb-3" asp-action="HomePage">Anasayfa</a>
</div>

<div class="tab-pane fade in active in show col-10">
    <div class="container-fluid overflow-auto align-self-start m-4 tableFixHead">
        <table class="table table-hover">
            <thead>
                <tr>

                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                   
        
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ConfirmationStatus)
                    </th>
      


                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        <p class="description" data-toggle="tooltip" data-placement="bottom" title="@item.Content">
                            @Html.DisplayFor(modelItem => item.Content)
                        </p>

                    </td>
                    <td class="text-center">
                        @if (Convert.ToInt32(item.ConfirmationStatus) == 1)
                        {
                            <i class="mdi mdi-circle status-active"></i>
                        }
                        else if (Convert.ToInt32(item.ConfirmationStatus) == 2)
                        {
                            <i class="mdi mdi-circle status-passive"></i>
                        }
                        else
                        {
                            <i class="mdi mdi-circle status-pending"></i>
                        }
                    </td>
                    <td>
                        <a class="btn btn-outline-info" data-toggle="tooltip" data-placement="bottom" title="Detay" asp-action="ArticleDetails" asp-route-id="@item.ArticleID">
                            <i class="mdi mdi-account-card-details-outline"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
