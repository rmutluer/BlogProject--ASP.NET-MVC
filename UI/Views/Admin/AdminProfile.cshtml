@*---Admin---*@
@model AppUser

@{
    ViewData["Title"] = "Detaylar";
    Layout = "_AdminLayout";
}
<div class="d-flex header-sticky" style="width:67%">
    <h1 class="d-inline ml-0">@Model.GetFullNameShort().ToTitleCase() Detayları</h1>
</div>
<div class="d-flex flex-wrap col-12 justify-content-center">
    <div class="d-flex col-lg-5 col-md-8 col-sm-10 flex-wrap justify-content-center">
        @if (string.IsNullOrEmpty(Model.ProfilePhotoPath))
        {
            <div class="profile-photo-container" style="border-radius:50%">
                <img class="profile-photo" src="~/img/default-profile-photo.jpg" />
            </div>
        }
        else
        {
            <div class="profile-photo-container">
                <div class="profile-photo" style="background-image: url(@Model.ProfilePhotoPath); "></div>
            </div>
        }
    </div>
    <div class="card col-lg-6 col-md-8 col-sm-10 justify-content-center">
        <div class="card-body">
            <div class="detail-item d-flex border-bottom ">
                <label asp-for="FirstName" class="col-4"></label>
                <span class="col-6">@Model.FirstName.ToTitleCase() @Model.SecondName?.ToTitleCase()</span>
            </div>
            <div class="detail-item d-flex border-bottom ">
                <label asp-for="LastName" class="col-4"></label>
                <span class="col-6">@Model.LastName.ToTitleCase() @Model.SecondLastName?.ToTitleCase()</span>
            </div>
            <div class="detail-item d-flex border-bottom ">
                <label asp-for="CitizenId" class="col-4"></label>
                <span class="col-6">@Model.CitizenId</span>
            </div>
            <div class="detail-item d-flex border-bottom ">
                <label asp-for="BirthDate" class="col-4"></label>
                <span class="col-6">@Model.BirthDate.ToShortDateString()</span>
            </div>
            <div class="detail-item d-flex border-bottom ">
                <label asp-for="Job" class="col-4"></label>
                <span class="col-6">@Model.Job</span>
            </div>
            <div class="detail-item d-flex border-bottom  ">
                <label asp-for="PhoneNumber" class="col-4"></label>
                <span class="col-6">@Model.PhoneNumber</span>
            </div>
            <div class="detail-item d-flex border-bottom  ">
                <label asp-for="Email" class="col-4"></label>
                <span class="col-6">@Model.Email</span>
            </div>
            <div class="detail-item d-flex border-bottom  ">
                <label asp-for="Followers" class="col-4"></label>
                <span class="col-6">@Model.Followers</span>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-outline-warning h-50" style="margin-left:88%;  margin-top:20px;" asp-action="AdminProfileUpdate">Düzenle</a>


