@model IEnumerable<ENTITIES.Entities.AppUser>

@{
    ViewData["Title"] = "Yazarlar";
    Layout = "_AdminLayout";
}

<div class="d-flex ">

    <a class="btn btn-outline-dark ml-auto align-self-center mb-3" asp-action="HomePage">Anasayfa</a>
</div>
<div  class="tab-pane fade in active in show col-10">
    <div class="container-fluid overflow-auto align-self-start m-4 tableFixHead">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Yazar
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>Detaylar</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.GetFullName()
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td class="text-center">
                        @if (Convert.ToInt32(item.Status) == 1)
                        {
                            <i class="mdi mdi-circle status-active"></i>
                        }
                        else if (Convert.ToInt32(item.Status) == 0)
                        {
                            <i class="mdi mdi-circle status-passive"></i>
                        }
                        else
                        {
                            <i class="mdi mdi-circle status-pending"></i>
                        }
                    </td>
                    <td>
                        <a class="btn btn-outline-info" data-toggle="tooltip" data-placement="bottom" title="Detay" asp-controller="admin" asp-action="AuthorDetails" asp-route-id="@item.Id">
                            <i class="mdi mdi-account-card-details-outline"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>